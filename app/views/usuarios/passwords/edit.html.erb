<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-body well">
          <fieldset>
          <legend class="text-center">CAMBIO DE CLAVE</legend>
          <br>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "val" }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password, "Nueva clave" %><br />
              <%= f.password_field :password, autofocus: true, autocomplete: "off",  class: 'form-control', :required => true, :minlenght => "6"%>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirmar nueva clave" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off",  class: 'form-control', :required => true, :minlenght => "6", :maxlenght => "12"%>
            </div>


            <center>
              <div class="actions col-md-12">
                <%= f.submit "Aceptar", class: 'btn btn-primary'  %>
              </div>
              <% end %>
              </div>
            </center>
          </fieldset>
      </div>
    </div>
  </div>
</div>

<%= render "usuarios/shared/links" %>
<script>
$( document ).ready(function() {
    $( ".val" ).validate({
      rules: {
        field: {
          required: true
        },
        "usuario[password]": "required",
        "usuario[password_confirmation]": {
          equalTo: "#usuario_password"
        }
      }
    });
    console.log($(".val"))
  });
    <%if devise_error_messages!.present? %>
    $("#error").append("Contrasena incorrecta")
    $("#error").show()

    <%end%>
</script>

